if has("mac")
  set guifont=Monaco\ for\ Powerline
  set fuopt=maxhorz,maxvert
  set fu
  set vb "shuts up the bell sounds from macVim
  map <Leader>fs :set invfu<CR>
end

set guioptions-=T
set guioptions-=m
set guioptions-=r
set guioptions-=L

set columns=140

"colorscheme candycode
colorscheme tomorrow-night
set transparency=10
